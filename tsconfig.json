{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["assets/*"],
			"@components/*": ["src/components/*"],
			"@constants/*": ["src/constants/*"],
			"@hooks/*": ["src/hooks/*"],
			"@lib/*": ["src/lib/*"],
			"@screens/*": ["src/screens/*"],
			"@services/*": ["src/services/*"],
			"@store/*": ["src/store/*"],
			"@styles/*": ["src/styles/*"],
			"@custom-types/*": ["src/types/*"],
			"@/*": ["src/*"]
		},
	}
}
