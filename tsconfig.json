{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@assets/*": ["assets/*"],
      "@app/*": ["src/app/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@hooks/*": ["src/hooks/*"],
      "@lib/*": ["src/lib/*"],
      "@locales/*": ["src/locales/*"],
      "@schemas/*": ["src/schemas/*"],
      "@services/*": ["src/services/*"],
      "@styles/*": ["src/styles/*"],
      "@/*": ["src/*"],
      "~/*": ["src/*"]
    }
  }
}
